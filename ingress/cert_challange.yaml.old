apiVersion: certmanager.k8s.io/v1alpha1
kind: Certificate
metadata:
  name: ingress-prod-cert
spec:
  secretName: letsencrypt-sec-prod
  dnsNames:
  - "jamieserver.ddns.net"
  acme:
    config:
    - http01:
        ingressClass: nginx-prod
      domains:
      - "jamieserver.ddns.net"
  issuerRef:
    name: letsencrypt-prod
    kind: ClusterIssuer
---
apiVersion: certmanager.k8s.io/v1alpha1
kind: Certificate
metadata:
  name: ingress-prod-cert-jamiechapmanbrn
spec:
  secretName: letsencrypt-sec-prod-jamiechapmanbrn
  dnsNames:
  - "*.jamiechapmanbrn.com"
  acme:
    config:
    - dns01:
        ingressClass: nginx-prod
      domains:
      - "*.jamiechapmanbrn.com"
  issuerRef:
    name: letsencrypt-prod-jamiechapmanbrn
    kind: ClusterIssuer